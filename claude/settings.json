{
  "permissions": {
    "deny": [
      "Bash(sed:*)"
    ],
    "allow": [
      "Bash(awk:*)",
      "Bash(bat:*)",
      "Bash(cat:*)",
      "Bash(echo:*)",
      "Bash(fd:*)",
      "Bash(find:*)",
      "Bash(git blame:*)",
      "Bash(git branch:*)",
      "Bash(git diff:*)",
      "Bash(git log:*)",
      "Bash(git show:*)",
      "Bash(git status:*)",
      "Bash(grep:*)",
      "Bash(head:*)",
      "Bash(jq:*)",
      "Bash(ls:*)",
      "Bash(bd:*)",
      "Bash(mise lock:*)",
      "Bash(printf:*)",
      "Bash(rg:*)",
      "Bash(sort:*)",
      "Bash(tail:*)",
      "Bash(uniq:*)",
      "Bash(wc:*)",
      "Glob",
      "Grep",
      "Read",
      "WebFetch",
      "WebSearch"
    ]
  },
  "hooks": {
    "Notification": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "tmux set -w -t \"$TMUX_PANE\" @claude_waiting \"1\" 2>/dev/null; tmux set -w -t \"$TMUX_PANE\" @claude_working \"0\" 2>/dev/null; tmux refresh-client 2>/dev/null || true"
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "tmux set -w -t \"$TMUX_PANE\" @claude_waiting \"0\" 2>/dev/null; tmux set -w -t \"$TMUX_PANE\" @claude_working \"0\" 2>/dev/null; tmux refresh-client 2>/dev/null || true"
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "tmux set -w -t \"$TMUX_PANE\" @claude_waiting \"0\" 2>/dev/null; tmux set -w -t \"$TMUX_PANE\" @claude_working \"1\" 2>/dev/null; tmux refresh-client 2>/dev/null || true"
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "tmux set -w -t \"$TMUX_PANE\" @claude_waiting \"0\" 2>/dev/null; tmux set -w -t \"$TMUX_PANE\" @claude_working \"1\" 2>/dev/null; tmux refresh-client 2>/dev/null || true"
          }
        ]
      }
    ],
    "SessionStart": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "tmux set -w -t \"$TMUX_PANE\" @claude_waiting \"0\" 2>/dev/null; tmux set -w -t \"$TMUX_PANE\" @claude_working \"0\" 2>/dev/null; tmux refresh-client 2>/dev/null || true"
          }
        ]
      },
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "bd prime"
          }
        ]
      }
    ],
    "PreCompact": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "bd prime"
          }
        ]
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "~/.claude/statusline.sh"
  },
  "enabledPlugins": {
    "ls-claude@lightspark": true,
    "beads@beads-marketplace": true,
    "plugin-dev@claude-plugins-official": true,
    "context7@claude-plugins-official": true,
    "superpowers@claude-plugins-official": true
  }
}
